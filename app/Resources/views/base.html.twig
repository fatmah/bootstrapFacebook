<!DOCTYPE html>
<html>
    <head>
          <base href="{{ app.request.scheme ~ '://' ~ app.request.httpHost }}" />
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    {% block javascripts %}
       <script type="text/javascript" src="{{ asset('front/js/jquery-1.11.0.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('front/js/uniform/jquery.uniform.js') }}"></script>
      <script type="text/javascript" src="//connect.facebook.net/en_US/all.js"></script>
        {% endblock %}
      <script type="text/javascript">
          $( document ).ready(function() {

          FB.init({
             appId: {{ app_id }},
             status: true,
             cookie: true,
             xfbml: true,
             oauth: true
          });
 
      });
          </script>
    <body>
    	<div id="fb-root"></div>
  
        {% block body %}{% endblock %}

    </body>
</html>
